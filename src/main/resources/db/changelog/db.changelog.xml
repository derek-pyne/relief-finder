<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="dp">
        <createTable tableName="shifts">
            <column name="id" type="varchar">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="dp">
        <renameTable oldTableName="shifts" newTableName="shift"/>
    </changeSet>

    <changeSet id="3" author="dp">
        <addColumn tableName="shift">
            <column name="email" type="varchar">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="4" author="dp">
        <createTable tableName="contact">
            <column name="id" type="varchar">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar"/>
            <column name="full_name" type="varchar"/>
            <column name="created_date" type="timestamp with time zone"/>
            <column name="last_modified_date" type="timestamp with time zone"/>
        </createTable>

        <addColumn tableName="shift">
            <column name="poster_id" type="varchar">
                <constraints foreignKeyName="shift_poster_fk" nullable="true" referencedTableName="contact"
                             referencedColumnNames="id"/>
            </column>
            <column name="created_date" type="timestamp with time zone"/>
            <column name="last_modified_date" type="timestamp with time zone"/>
        </addColumn>

        <dropColumn tableName="shift" columnName="email"/>
    </changeSet>

    <changeSet id="5" author="dp">
        <addColumn tableName="shift">
            <column name="start_time" type="timestamp with time zone"/>
            <column name="end_time" type="timestamp with time zone"/>
        </addColumn>
    </changeSet>

    <changeSet id="6" author="dp">
        <renameTable oldTableName="contact" newTableName="users"/>
    </changeSet>

    <changeSet id="7" author="dp">
        <addColumn tableName="users">
            <column name="messenger_id" type="varchar"/>
        </addColumn>
        <dropNotNullConstraint tableName="users" columnName="email" columnDataType="varchar"/>
    </changeSet>

    <changeSet id="8" author="dp">
        <createTable tableName="conversation">
            <column name="id" type="varchar">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="varchar"/>
            <column name="conversation_type" type="varchar"/>
            <column name="conversation_stage" type="varchar"/>
            <column name="completed_at" type="timestamp with time zone"/>
            <column name="created_date" type="timestamp with time zone"/>
            <column name="last_modified_date" type="timestamp with time zone"/>
        </createTable>
    </changeSet>

    <changeSet id="9" author="dp">
        <createTable tableName="conversation_message">
            <column name="id" type="varchar">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="conversation_id" type="varchar"/>
            <column name="user_type" type="varchar"/>
            <column name="text" type="varchar"/>
            <column name="sent_at" type="timestamp with time zone"/>
            <column name="created_date" type="timestamp with time zone"/>
            <column name="last_modified_date" type="timestamp with time zone"/>
        </createTable>
    </changeSet>
</databaseChangeLog>